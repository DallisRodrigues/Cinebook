<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineBook India</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Manrope:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Manrope', 'sans-serif'], header: ['Bebas Neue', 'sans-serif'] },
                    colors: { brand: { red: '#E50914', dark: '#0A0A0A', card: '#151515' } }
                }
            }
        }
    </script>
    <style>body { background-color: #0A0A0A; color: white; }</style>
</head>
<body>

    <nav class="fixed top-0 w-full z-50 bg-brand-dark/90 backdrop-blur-md border-b border-white/5">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <span class="material-symbols-rounded text-brand-red text-3xl">movie_filter</span>
                <h1 class="font-header text-3xl tracking-wide">CINE<span class="text-brand-red">BOOK</span></h1>
            </div>
            <div class="flex items-center gap-4 text-sm font-semibold">
                <span class="text-gray-400">Mumbai</span>
                <button class="bg-brand-red px-5 py-2 rounded hover:bg-red-700 transition">Sign In</button>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 pt-28 pb-10">
        <h2 class="text-2xl font-bold mb-6 border-l-4 border-brand-red pl-4">Now Showing in Mumbai</h2>
        
        <div id="loader" class="flex justify-center py-20">
            <div class="w-10 h-10 border-4 border-brand-red border-t-transparent rounded-full animate-spin"></div>
        </div>

        <div id="movie-grid" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6"></div>
    </main>

    <script>
        const API_GATEWAY = "http://localhost:8080";
        const IMAGE_BASE = "https://image.tmdb.org/t/p/w500";

        document.addEventListener("DOMContentLoaded", async () => {
            try {
                // Fetch from Backend Proxy (Secure)
                const res = await fetch(`${API_GATEWAY}/movies/now-playing`);
                const data = await res.json();
                renderMovies(data.results);
            } catch (e) {
                console.error(e);
                document.getElementById('loader').innerHTML = `<p class="text-red-500">Failed to load movies. Ensure Backend is running.</p>`;
            }
        });

        function renderMovies(movies) {
            document.getElementById('loader').remove();
            const grid = document.getElementById('movie-grid');

            movies.forEach(movie => {
                const card = document.createElement('div');
                card.className = "group cursor-pointer";
                card.onclick = () => window.location.href = `index.html?id=${movie.id}`; // Navigate to Booking

                card.innerHTML = `
                    <div class="relative rounded-xl overflow-hidden mb-3 aspect-[2/3] bg-brand-card">
                        <img src="${IMAGE_BASE + movie.poster_path}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-4">
                            <button class="bg-brand-red w-full py-2 rounded font-bold text-sm">BOOK TICKET</button>
                        </div>
                        <div class="absolute top-2 right-2 bg-black/60 backdrop-blur px-2 py-1 rounded text-xs font-bold flex items-center gap-1">
                            <span class="text-yellow-500">★</span> ${movie.vote_average.toFixed(1)}
                        </div>
                    </div>
                    <h3 class="font-bold text-gray-100 truncate group-hover:text-brand-red transition">${movie.title}</h3>
                    <p class="text-xs text-gray-500">${movie.release_date.split('-')[0]} • English</p>
                `;
                grid.appendChild(card);
            });
        }
    </script>
</body>
</html>