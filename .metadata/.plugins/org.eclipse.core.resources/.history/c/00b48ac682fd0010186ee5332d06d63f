<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book Tickets | CineBook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Manrope:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Manrope', 'sans-serif'], header: ['Bebas Neue', 'sans-serif'] },
                    colors: { brand: { red: '#E50914', dark: '#0A0A0A' } }
                }
            }
        }
    </script>
    <style>
        .glass { background: rgba(20,20,20,0.8); backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.1); }
        .seat-btn:hover:not(:disabled) { transform: scale(1.2); box-shadow: 0 0 15px #E50914; z-index: 10; }
        .screen-glow { box-shadow: 0 -20px 60px rgba(255,255,255,0.1); }
    </style>
</head>
<body class="bg-brand-dark text-white h-screen flex flex-col overflow-hidden">

    <div class="fixed inset-0 z-0">
        <img id="bg-backdrop" src="" class="w-full h-full object-cover opacity-20 blur-sm">
        <div class="absolute inset-0 bg-gradient-to-t from-brand-dark via-brand-dark/90 to-black/40"></div>
    </div>

    <div class="relative z-20 px-8 py-4 flex justify-between items-center border-b border-white/5">
        <a href="home.html" class="flex items-center gap-2 text-gray-400 hover:text-white transition">
            <span class="material-symbols-rounded">arrow_back</span> Back to Movies
        </a>
        <h1 class="font-header text-3xl tracking-wide">CINE<span class="text-brand-red">BOOK</span></h1>
        <div class="w-20"></div>
    </div>

    <div class="relative z-10 flex-1 grid grid-cols-12 gap-8 px-12 py-6">
        
        <div class="col-span-3 flex flex-col gap-6 animate-fade-in-left">
            <div class="relative rounded-xl overflow-hidden shadow-2xl aspect-[2/3] w-48 mx-auto lg:w-full">
                <img id="poster-img" src="" class="w-full h-full object-cover">
            </div>
            
            <div class="text-center lg:text-left">
                <h1 id="movie-title" class="font-header text-5xl leading-none mb-2">Loading...</h1>
                <div class="flex flex-wrap gap-2 justify-center lg:justify-start text-xs font-bold text-gray-400 mb-4">
                    <span id="cert-badge" class="px-2 py-0.5 border border-gray-500 rounded text-white">UA</span>
                    <span id="runtime" class="px-2 py-0.5 bg-gray-800 rounded">2h 30m</span>
                    <span class="px-2 py-0.5 bg-brand-red text-white rounded">IMAX 3D</span>
                </div>
                
                <p id="tagline" class="text-sm text-gray-400 italic mb-4">"The end is near."</p>
                
                <h3 class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-2">Cast</h3>
                <p id="cast-list" class="text-sm text-gray-300 leading-relaxed line-clamp-3">Loading Cast...</p>
                
                <button onclick="openTrailer()" class="mt-6 w-full py-3 border border-white/20 rounded-lg hover:bg-white hover:text-black transition flex items-center justify-center gap-2 font-bold">
                    <span class="material-symbols-rounded">play_circle</span> Watch Trailer
                </button>
            </div>
        </div>

        <div class="col-span-9 flex flex-col items-center justify-center glass rounded-2xl p-8 relative">
            <div class="absolute top-4 right-4 text-xs text-gray-500 font-mono">SCREEN 4 • DOLBY ATMOS</div>
            
            <div class="w-3/4 h-1 bg-white/20 rounded-full mb-10 screen-glow"></div>
            <div class="text-center text-xs text-gray-600 uppercase tracking-[0.5em] mb-8">All Eyes This Way</div>

            <div id="loader-seat" class="text-brand-red animate-pulse font-header text-2xl">FETCHING REAL-TIME SEATS...</div>
            <div id="seat-grid" class="grid grid-cols-10 gap-3 hidden"></div>

            <div class="flex gap-8 mt-12 text-xs font-bold text-gray-400">
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-gray-700"></div> ₹250 (Standard)</div>
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded border border-yellow-500"></div> ₹350 (VIP)</div>
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-brand-red"></div> Selected</div>
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-[#111] border border-gray-800"></div> Sold</div>
            </div>
        </div>
    </div>

    <script>
        const API_GATEWAY = "http://localhost:8080";
        const urlParams = new URLSearchParams(window.location.search);
        const MOVIE_ID = urlParams.get('id') || 550; // Default to Fight Club if empty
        let TRAILER_KEY = "";

        document.addEventListener("DOMContentLoaded", init);

        async function init() {
            await fetchMetadata();
            await fetchSeats();
        }

        // 1. Fetch Deep Metadata (Cast, Certification, Trailer)
        async function fetchMetadata() {
            try {
                const res = await fetch(`${API_GATEWAY}/movies/${MOVIE_ID}/details`);
                const data = await res.json();

                // Populate UI
                document.getElementById('bg-backdrop').src = `https://image.tmdb.org/t/p/original${data.backdrop_path}`;
                document.getElementById('poster-img').src = `https://image.tmdb.org/t/p/w500${data.poster_path}`;
                document.getElementById('movie-title').innerText = data.title;
                document.getElementById('tagline').innerText = data.tagline || data.overview;
                document.getElementById('runtime').innerText = `${Math.floor(data.runtime/60)}h ${data.runtime%60}m`;

                // Extract Certification (India)
                const releaseDates = data.release_dates.results.find(r => r.iso_3166_1 === 'IN');
                const cert = releaseDates ? releaseDates.release_dates[0].certification : "UA";
                document.getElementById('cert-badge').innerText = cert || "UA";

                // Extract Cast (Top 3)
                const cast = data.credits.cast.slice(0, 3).map(c => c.name).join(", ");
                document.getElementById('cast-list').innerText = cast + "...";

                // Extract Trailer
                const trailer = data.videos.results.find(v => v.type === 'Trailer');
                if(trailer) TRAILER_KEY = trailer.key;

            } catch(e) {
                console.error("Metadata Error", e);
            }
        }

        // 2. Fetch Seats (Lazy Init)
        async function fetchSeats() {
            try {
                const title = document.getElementById('movie-title').innerText;
                // Pass Title so Backend can auto-generate seats if missing
                const res = await fetch(`${API_GATEWAY}/movies/${MOVIE_ID}/seats?title=${encodeURIComponent(title)}`);
                const seats = await res.json();
                renderSeats(seats);
            } catch(e) {
                console.error(e);
            }
        }

        function renderSeats(seats) {
            document.getElementById('loader-seat').remove();
            const grid = document.getElementById('seat-grid');
            grid.classList.remove('hidden');

            seats.forEach(seat => {
                const isBooked = seat.status === 'BOOKED';
                const isVip = seat.price > 300;
                const btn = document.createElement('button');
                
                btn.className = `w-10 h-10 rounded-t-lg text-[10px] font-bold transition-all duration-200 border-b-2 flex items-center justify-center seat-btn
                    ${isBooked ? 'bg-[#111] border-[#222] text-transparent cursor-not-allowed opacity-30' : 
                      isVip ? 'bg-gray-800 border-yellow-500 text-yellow-500 hover:bg-yellow-500 hover:text-black' : 
                              'bg-gray-700 border-gray-600 text-gray-300 hover:bg-brand-red hover:text-white hover:border-red-900'}`;
                
                btn.innerText = seat.seatNumber;
                btn.disabled = isBooked;
                if(!isBooked) btn.onclick = () => bookSeat(seat);
                grid.appendChild(btn);
            });
        }

        async function bookSeat(seat) {
            const { isConfirmed } = await Swal.fire({
                title: 'Confirm Booking',
                html: `Seat <b>${seat.seatNumber}</b> <br> Price: ₹${seat.price}`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#E50914',
                background: '#151515', color: '#fff'
            });

            if(isConfirmed) {
                Swal.fire({ title: 'Booking...', didOpen: () => Swal.showLoading(), background: '#151515', color: '#fff' });
                const userId = Math.floor(Math.random() * 9999);
                
                const res = await fetch(`${API_GATEWAY}/bookings/create?userId=${userId}&seatId=${seat.id}&movieId=${MOVIE_ID}`);
                const text = await res.text();
                
                if(text.includes("Successful")) {
                    Swal.fire({ icon: 'success', title: 'Confirmed!', background: '#151515', color: '#fff' })
                    .then(() => location.reload());
                } else {
                    Swal.fire({ icon: 'error', title: 'Failed', text: text, background: '#151515', color: '#fff' });
                }
            }
        }

        function openTrailer() {
            if(TRAILER_KEY) window.open(`https://www.youtube.com/watch?v=${TRAILER_KEY}`, '_blank');
            else Swal.fire({ title: 'No Trailer Available', icon: 'info', background: '#151515', color: '#fff' });
        }
    </script>
</body>
</html>