    <script>
        const API_GATEWAY = "http://localhost:8080";
        const MOVIE_ID = 1; 
        const USER_ID = Math.floor(Math.random() * 9999); // Random User

        // 1. Initialize: Fetch Seats on Load
        document.addEventListener("DOMContentLoaded", () => {
            fetchSeats();
        });

        async function fetchSeats() {
            try {
                // Hitting the Gateway -> Movie Service
                const response = await fetch(`${API_GATEWAY}/movies/${MOVIE_ID}/seats`);
                if (!response.ok) throw new Error("Gateway Unreachable");
                const seats = await response.json();
                renderSeats(seats);
            } catch (error) {
                console.error(error);
                document.getElementById('seat-loader').innerText = "⚠️ SYSTEM OFFLINE";
                document.getElementById('seat-loader').classList.add('text-red-500');
            }
        }

        function renderSeats(seats) {
            const grid = document.getElementById('seat-grid');
            const loader = document.getElementById('seat-loader');
            
            grid.innerHTML = ""; // Clear existing
            loader.classList.add('hidden');
            grid.classList.remove('hidden');

            seats.forEach(seat => {
                const isBooked = seat.status === 'BOOKED';
                const btn = document.createElement('button');
                
                // Styling Logic
                btn.className = `w-12 h-12 rounded-t-xl text-xs font-bold transition-all duration-300 border-b-4 flex items-center justify-center seat-btn
                    ${isBooked 
                        ? 'bg-[#1a1a1a] border-black text-transparent disabled' 
                        : 'bg-gray-700 border-gray-900 text-gray-400 hover:bg-brand-red hover:text-white hover:border-red-900'}`;
                
                btn.innerText = seat.seatNumber;
                btn.disabled = isBooked;
                
                if (!isBooked) {
                    btn.onclick = () => bookSeat(seat.id, seat.seatNumber);
                }

                grid.appendChild(btn);
            });
        }

        async function bookSeat(seatId, seatNumber) {
            // Optimistic UI: Play Sound & Confirm
            const confirm = await Swal.fire({
                title: 'CONFIRM BOOKING',
                text: `Book seat ${seatNumber} for $15.00?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#E50914',
                cancelButtonColor: '#333',
                confirmButtonText: 'YES, BOOK IT!',
                background: '#18181b',
                color: '#fff'
            });

            if (confirm.isConfirmed) {
                // Show Loading Spinner
                Swal.fire({
                    title: 'PROCESSING...',
                    html: 'Contacting Secure Gateway...',
                    timerProgressBar: true,
                    didOpen: () => { Swal.showLoading() },
                    background: '#18181b',
                    color: '#fff'
                });

                try {
                    // Call Booking Service via Gateway
                    const response = await fetch(`${API_GATEWAY}/bookings/create?userId=${USER_ID}&seatId=${seatId}&movieId=${MOVIE_ID}`);
                    const text = await response.text();

                    if (text.includes("Successful")) {
                        // Success Animation
                        Swal.fire({
                            title: 'BOOKING CONFIRMED!',
                            text: 'Your ticket is generating in the background.',
                            icon: 'success',
                            confirmButtonColor: '#E50914',
                            background: '#18181b',
                            color: '#fff'
                        }).then(() => {
                            fetchSeats(); // Refresh grid to show it as booked
                        });
                    } else {
                        throw new Error(text); // Handle "Seat Taken" or Circuit Breaker
                    }
                } catch (error) {
                    Swal.fire({
                        title: 'BOOKING FAILED',
                        text: error.message || "System Maintenance Mode",
                        icon: 'error',
                        confirmButtonColor: '#E50914',
                        background: '#18181b',
                        color: '#fff'
                    });
                }
            }
        }
    </script>
