<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book Tickets | CineBook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Manrope:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Manrope', 'sans-serif'], header: ['Bebas Neue', 'sans-serif'] },
                    colors: { brand: { red: '#E50914', dark: '#0A0A0A' } }
                }
            }
        }
    </script>
    <style>
        .glass { background: rgba(20,20,20,0.85); backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.1); }
        .seat-btn { transition: all 0.2s; }
        .seat-btn:hover:not(:disabled) { transform: scale(1.2); box-shadow: 0 0 15px #E50914; z-index: 10; border-color: white; }
        .screen-glow { box-shadow: 0 -20px 60px rgba(255,255,255,0.15); }
    </style>
</head>
<body class="bg-brand-dark text-white h-screen flex flex-col overflow-hidden">

    <div class="fixed inset-0 z-0">
        <img id="bg-backdrop" src="" class="w-full h-full object-cover opacity-20 blur-sm">
        <div class="absolute inset-0 bg-gradient-to-t from-brand-dark via-brand-dark/90 to-black/40"></div>
    </div>

    <div class="relative z-20 px-8 py-4 flex justify-between items-center border-b border-white/5">
        <a href="home.html" class="flex items-center gap-2 text-gray-400 hover:text-white transition">
            <span class="material-symbols-rounded">arrow_back</span> Back
        </a>
        <h1 class="font-header text-3xl tracking-wide">CINE<span class="text-brand-red">BOOK</span></h1>
        <div class="w-10"></div>
    </div>

    <div class="relative z-10 flex-1 grid grid-cols-1 lg:grid-cols-12 gap-4 lg:gap-12 px-6 py-4 h-full overflow-y-auto lg:overflow-hidden">
        
        <div class="col-span-12 lg:col-span-4 flex flex-col gap-4 justify-center">
            <div class="relative rounded-lg overflow-hidden shadow-2xl w-40 lg:w-64 mx-auto lg:mx-0">
                <img id="poster-img" src="" class="w-full h-full object-cover">
            </div>
            
            <div class="text-center lg:text-left space-y-3">
                <h1 id="movie-title" class="font-header text-5xl leading-none">Loading...</h1>
                <div class="flex flex-wrap justify-center lg:justify-start gap-2 text-xs font-bold text-gray-400">
                    <span id="cert-badge" class="px-2 py-0.5 border border-gray-500 rounded">UA</span>
                    <span id="runtime" class="px-2 py-0.5 bg-gray-800 rounded"></span>
                    <span class="px-2 py-0.5 bg-brand-red text-white rounded">IMAX 3D</span>
                </div>
                
                <p id="tagline" class="text-sm text-gray-400 italic">...</p>
                
                <button id="trailer-btn" onclick="openTrailer()" class="hidden w-full py-3 border border-white/20 rounded-lg hover:bg-white hover:text-black transition flex items-center justify-center gap-2 font-bold">
                    <span class="material-symbols-rounded">play_circle</span> Watch Trailer
                </button>
            </div>
        </div>

        <div class="col-span-12 lg:col-span-8 flex flex-col items-center justify-center glass rounded-2xl p-4 lg:p-8">
            <div class="w-2/3 h-1.5 bg-white/30 rounded-full mb-10 screen-glow"></div>
            <div class="text-xs text-gray-500 uppercase tracking-[0.5em] mb-8">Screen</div>

            <div id="loader-seat" class="text-brand-red animate-pulse font-header text-2xl">Initializing Cinema...</div>
            
            <div id="seat-grid" class="grid grid-cols-10 gap-3 hidden"></div>

            <div class="flex gap-6 mt-10 text-[10px] font-bold text-gray-400 uppercase tracking-widest">
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-gray-700 border border-gray-600"></div> Available</div>
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-brand-red shadow-lg shadow-red-900"></div> Selected</div>
                <div class="flex items-center gap-2"><div class="w-4 h-4 rounded bg-[#111] border border-gray-800"></div> Sold Out</div>
            </div>
        </div>
    </div>

    <script>
        const API_GATEWAY = "http://localhost:8080";
        const urlParams = new URLSearchParams(window.location.search);
        const MOVIE_ID = urlParams.get('id') || 550; 
        let TRAILER_KEY = null;

        document.addEventListener("DOMContentLoaded", () => {
            fetchMetadata();
            fetchSeats();
        });

        async function fetchMetadata() {
            try {
                const res = await fetch(`${API_GATEWAY}/movies/${MOVIE_ID}/details`);
                const data = await res.json();

                // 1. Set Images
                const backdrop = data.backdrop_path ? `https://image.tmdb.org/t/p/original${data.backdrop_path}` : '';
                const poster = data.poster_path ? `https://image.tmdb.org/t/p/w500${data.poster_path}` : 'https://via.placeholder.com/300x450';
                
                document.getElementById('bg-backdrop').src = backdrop;
                document.getElementById('poster-img').src = poster;
                document.getElementById('movie-title').innerText = data.title;
                document.getElementById('tagline').innerText = data.tagline || "";
                document.getElementById('runtime').innerText = data.runtime ? `${Math.floor(data.runtime/60)}h ${data.runtime%60}m` : "2h";

                // 2. Find Trailer (Loop through videos)
                if (data.videos && data.videos.results) {
                    const trailer = data.videos.results.find(v => v.type === 'Trailer' && v.site === 'YouTube');
                    if (trailer) {
                        TRAILER_KEY = trailer.key;
                        const btn = document.getElementById('trailer-btn');
                        btn.classList.remove('hidden'); // Show button only if trailer exists
                        btn.classList.add('flex');
                    }
                }

            } catch(e) { console.error("Metadata Error", e); }
        }

        async function fetchSeats() {
            try {
                const titleElement = document.getElementById('movie-title');
                // Wait slightly for title to load, or use ID
                const title = titleElement.innerText === "Loading..." ? "Unknown Movie" : titleElement.innerText;
                
                const res = await fetch(`${API_GATEWAY}/movies/${MOVIE_ID}/seats?title=${encodeURIComponent(title)}`);
                const seats = await res.json();

                if (seats.length === 0) {
                    document.getElementById('loader-seat').innerText = "⚠️ No Seats Found (Database Empty)";
                    // Retry once automatically if backend lazy-init took too long
                    setTimeout(() => location.reload(), 2000); 
                } else {
                    renderSeats(seats);
                }
            } catch(e) {
                document.getElementById('loader-seat').innerText = "System Offline";
            }
        }

        function renderSeats(seats) {
            document.getElementById('loader-seat').remove();
            const grid = document.getElementById('seat-grid');
            grid.innerHTML = "";
            grid.classList.remove('hidden');

            seats.forEach(seat => {
                const isBooked = seat.status === 'BOOKED';
                const btn = document.createElement('button');
                
                btn.className = `w-8 h-8 lg:w-10 lg:h-10 rounded-t-md text-[10px] font-bold flex items-center justify-center seat-btn border-b-2
                    ${isBooked ? 'bg-[#151515] border-[#222] text-transparent cursor-not-allowed' : 
                                 'bg-gray-700 border-gray-600 text-gray-300 hover:bg-brand-red hover:text-white'}`;
                
                btn.innerText = seat.seatNumber;
                btn.disabled = isBooked;
                if(!isBooked) btn.onclick = () => bookSeat(seat);
                grid.appendChild(btn);
            });
        }

        async function bookSeat(seat) {
            // SweetAlert Logic (Same as before)
            const result = await Swal.fire({
                title: 'Confirm Seat ' + seat.seatNumber,
                text: `Price: ₹${seat.price}`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#E50914',
                background: '#151515', color: '#fff'
            });

            if(result.isConfirmed) {
                Swal.fire({ title: 'Processing...', didOpen: () => Swal.showLoading(), background: '#151515', color: '#fff' });
                const userId = Math.floor(Math.random() * 9999);
                const res = await fetch(`${API_GATEWAY}/bookings/create?userId=${userId}&seatId=${seat.id}&movieId=${MOVIE_ID}`);
                const text = await res.text();
                
                if(text.includes("Successful")) {
                    Swal.fire({ icon: 'success', title: 'Ticket Booked!', background: '#151515', color: '#fff' })
                    .then(() => location.reload());
                } else {
                    Swal.fire({ icon: 'error', title: 'Failed', text: text, background: '#151515', color: '#fff' });
                }
            }
        }

        function openTrailer() {
            if(TRAILER_KEY) window.open(`https://www.youtube.com/watch?v=${TRAILER_KEY}`, '_blank');
        }
    </script>
</body>
</html>